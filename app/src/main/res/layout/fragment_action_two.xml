<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:id="@+id/action_linearLayout"
        android:background="@color/white">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_title_height"
            android:background="@color/divider"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv_activity_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.66"
                android:gravity="center"
                android:text="@string/data_title"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_title_size"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:text="开关"
            android:layout_weight="1.0"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/action_two_fab_switch"
            android:layout_width="@dimen/fab_size_mini"
            android:layout_height="@dimen/fab_size_mini"
            android:layout_margin="20dp"
            app:backgroundTint="@color/white"
            app:elevation="10dp"
            app:fabSize="normal"
            app:layout_anchorGravity="bottom|right|end"
            app:pressedTranslationZ="10dp"
            app:rippleColor="#33728dff"
            app:useCompatPadding="false"

            android:clickable="true"
            android:scaleType="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1.0"
            android:text="排气扇" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/action_two_fab_paiqishan"
            android:layout_width="@dimen/fab_size_mini"
            android:layout_height="@dimen/fab_size_mini"
            android:layout_margin="20dp"
            app:backgroundTint="@color/white"
            app:elevation="10dp"
            app:fabSize="normal"
            app:layout_anchorGravity="bottom|right|end"
            app:pressedTranslationZ="10dp"
            app:rippleColor="#33728dff"
            app:useCompatPadding="false"
            android:src="@drawable/speak"
            android:clickable="true"
            android:scaleType="center" />
        <TextView
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:text="灯"
            android:layout_weight="1.0"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/action_two_fab_light"
            android:layout_width="@dimen/fab_size_mini"
            android:layout_height="@dimen/fab_size_mini"
            android:layout_margin="20dp"
            app:backgroundTint="@color/white"
            app:elevation="10dp"
            app:fabSize="normal"
            app:layout_anchorGravity="bottom|right|end"
            app:pressedTranslationZ="10dp"
            app:rippleColor="#33728dff"
            app:useCompatPadding="false"
            android:src="@drawable/speak"
            android:clickable="true"
            android:scaleType="center" />
        <TextView
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:text="插座"
            android:layout_weight="1.0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/action_two_fab_socket1"
                android:layout_width="@dimen/fab_size_mini"
                android:layout_height="@dimen/fab_size_mini"
                android:layout_margin="20dp"
                app:backgroundTint="@color/white"
                app:elevation="10dp"
                app:fabSize="normal"
                app:layout_anchorGravity="bottom|right|end"
                app:pressedTranslationZ="10dp"
                app:rippleColor="#33728dff"
                app:useCompatPadding="false"
                android:src="@drawable/speak"
                android:clickable="true"
                android:scaleType="center" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/action_two_fab_socket2"
                android:layout_width="@dimen/fab_size_mini"
                android:layout_height="@dimen/fab_size_mini"
                android:layout_margin="20dp"
                app:backgroundTint="@color/white"
                app:elevation="10dp"
                app:fabSize="normal"
                app:layout_anchorGravity="bottom|right|end"
                app:pressedTranslationZ="10dp"
                app:rippleColor="#33728dff"
                app:useCompatPadding="false"
                android:src="@drawable/speak"
                android:clickable="true"
                android:scaleType="center" />
        </LinearLayout>
        <TextView
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:text="加湿器"
            android:layout_weight="1.0"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/action_two_fab_jiashiqi"
            android:layout_width="@dimen/fab_size_mini"
            android:layout_height="@dimen/fab_size_mini"
            android:layout_margin="20dp"
            app:backgroundTint="@color/white"
            app:elevation="10dp"
            app:fabSize="normal"
            app:layout_anchorGravity="bottom|right|end"
            app:pressedTranslationZ="10dp"
            app:rippleColor="#33728dff"
            app:useCompatPadding="false"
            android:src="@drawable/speak"
            android:clickable="true"
            android:scaleType="center" />
        <TextView
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:text="窗帘"
            android:layout_weight="1.0"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/action_two_fab_chuanglian"
            android:layout_width="@dimen/fab_size_mini"
            android:layout_height="@dimen/fab_size_mini"
            android:layout_margin="20dp"
            app:backgroundTint="@color/white"
            app:elevation="10dp"
            app:fabSize="normal"
            app:layout_anchorGravity="bottom|right|end"
            app:pressedTranslationZ="10dp"
            app:rippleColor="#33728dff"
            app:useCompatPadding="false"
            android:src="@drawable/speak"
            android:clickable="true"
            android:scaleType="center" />
        <TextView
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:text="温度"
            android:layout_weight="1.0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/action_two_fab_tigaowendu"
                android:layout_width="@dimen/fab_size_mini"
                android:layout_height="@dimen/fab_size_mini"
                android:layout_margin="20dp"
                app:backgroundTint="@color/white"
                app:elevation="10dp"
                app:fabSize="normal"
                app:layout_anchorGravity="bottom|right|end"
                app:pressedTranslationZ="10dp"
                app:rippleColor="#33728dff"
                app:useCompatPadding="false"
                android:src="@drawable/speak"
                android:clickable="true"
                android:scaleType="center" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/action_two_fab_jiangdiwendu"
                android:layout_width="@dimen/fab_size_mini"
                android:layout_height="@dimen/fab_size_mini"
                android:layout_margin="20dp"
                app:backgroundTint="@color/white"
                app:elevation="10dp"
                app:fabSize="normal"
                app:layout_anchorGravity="bottom|right|end"
                app:pressedTranslationZ="10dp"
                app:rippleColor="#33728dff"
                app:useCompatPadding="false"
                android:src="@drawable/speak"
                android:clickable="true"
                android:scaleType="center" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/action_two_fab_shushiwendu"
                android:layout_width="@dimen/fab_size_mini"
                android:layout_height="@dimen/fab_size_mini"
                android:layout_margin="20dp"
                app:backgroundTint="@color/white"
                app:elevation="10dp"
                app:fabSize="normal"
                app:layout_anchorGravity="bottom|right|end"
                app:pressedTranslationZ="10dp"
                app:rippleColor="#33728dff"
                app:useCompatPadding="false"
                android:src="@drawable/speak"
                android:clickable="true"
                android:scaleType="center" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>